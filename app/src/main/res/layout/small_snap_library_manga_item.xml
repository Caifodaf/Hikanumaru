<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CCMainLibraryItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:elevation="0dp"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/TVBlockStatus"
        style="@style/Text.Caption_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/Image"
        app:layout_constraintStart_toStartOf="@id/Image"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rectangle_rounded_all_8"
        android:backgroundTint="#99000000"
        android:elevation="50dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="Читаю"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/Image"
        android:layout_width="0dp"
        android:layout_height="183dp"
        android:scaleType="fitXY"
        android:elevation="40dp"
        app:layout_constraintDimensionRatio="H,61:40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user_logo"/>

    <TextView
        android:id="@+id/TVTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/Image"
        app:layout_constraintStart_toStartOf="@id/Image"
        app:layout_constraintEnd_toEndOf="@id/Image"
        style="@style/Text.Caption_1_1"
        android:maxLines="2"
        android:text="Моя девушка совсем не милая"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TVType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/TVTitle"
        app:layout_constraintStart_toStartOf="@id/Image"
        style="@style/Text.FootNote"
        android:maxLines="1"
        android:text="Manga"
        android:textColor="@color/grey_light_alternative_5" />
</androidx.constraintlayout.widget.ConstraintLayout>