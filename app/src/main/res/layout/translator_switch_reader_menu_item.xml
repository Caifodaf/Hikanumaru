<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:foregroundTint="#000000"
    android:layout_marginBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_rounded_all_13_reg"
        android:backgroundTint="@color/grey_light_alternative_7"
        android:weightSum="100"
        >

        <ImageView
            android:id="@+id/iv_trans_item"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="7"
            android:src="@drawable/ic_circle_empty_reader_menu"
            />

        <TextView
            android:id="@+id/tv_trans_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Text.Callout"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Nekommone"
            android:textColor="@color/white"
            android:layout_weight="93" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>