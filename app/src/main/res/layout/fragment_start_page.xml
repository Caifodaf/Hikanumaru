<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.startpage.StartPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GLCenterVertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GLImageHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.591"
            />

        <ImageSwitcher
            android:id="@+id/ImageSwitcher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/GLImageHorizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_blue_start_page"
            android:clickable="false"
            android:foregroundGravity="center"/>

        <TextView
            android:id="@+id/TVTitle"
            style="@style/Text.Headline_2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/GLImageHorizontal"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:text="@string/start_page_welcome" />

        <LinearLayout
            android:id="@+id/LLBlockLoginServices"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/TVTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageBtnGoogle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_google_start_page" />

            <ImageView
                android:id="@+id/ImageBtnVK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_vk_start_page" />


            <ImageView
                android:id="@+id/ImageBtnFacebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_facebook_start_page" />


            <ImageView
                android:id="@+id/ImageBtnTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_twitter_start_page" />


            <ImageView
                android:id="@+id/ImageBtnShikimori"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_shikimori_start_page" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLDividerStartPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LLBlockLoginServices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.7"
                android:background="@color/light_grey_3"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/or_text"
                android:lines="1"
                style="@style/Text.FootNote"
                android:textColor="@color/light_grey_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.7"
                android:background="@color/light_grey_3"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLBtnStartPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LLDividerStartPage"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVBtnLoginStart"
                style="@style/Text.Headline_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_rounded_all_15"
                android:backgroundTint="@color/grey_light_alternative_1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/login_start_pade"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TVBtnRegStart"
                style="@style/Text.Headline_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_rounded_all_15"
                android:backgroundTint="@color/light_grey_7"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/registration"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/TVBtnLogInGuest"
            style="@style/Text.FootNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/login_guest_text"
            android:textColor="@color/light_grey_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LLBtnStartPage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>