<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/NSWMangaPage_PH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            >

            <ImageView
                android:id="@+id/ImageBack_PH"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/CCBlock_PH"
                android:scaleType="centerCrop"
                android:scaleX="1"
                android:scaleY="1"
                android:paddingStart="-10dp"
                android:paddingEnd="-10dp"
                android:translationY="-20dp"
                android:background="@drawable/rectangle_rounded_all_16"
                android:backgroundTint="@color/light_grey_3"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="-10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/TVNameManga_PH"
                android:background="@drawable/gradient_manga_page_back"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="-20dp"
                app:layout_constraintTop_toTopOf="@+id/TVNameManga_PH"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                />

            <net.orandja.shadowlayout.ShadowLayout
                android:id="@+id/ConteinerImageManga_PH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shadow_radius="12"
                app:shadow_downscale="1"
                app:shadow_color="#40000000"
                app:shadow_y_shift="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ImageManga_PH"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    app:layout_constraintDimensionRatio="254:400"
                    android:background="@drawable/rectangle_rounded_all_16"
                    android:backgroundTint="@color/light_grey_1"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="40dp"
                    app:riv_corner_radius="16dip"
                    />
            </net.orandja.shadowlayout.ShadowLayout>

            <TextView
                android:id="@+id/TVNameManga_PH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_extra_bold"
                android:textSize="32sp"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.5sp"
                android:gravity="center_horizontal|top"
                android:layout_marginTop="-10dp"
                app:layout_constraintTop_toBottomOf="@id/ConteinerImageManga_PH"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:clickable="false"
                android:maxLines="2"
                android:text="Одинокий рокер"
                android:textColor="@color/light_grey_1"
                android:background="@drawable/rectangle_rounded_all_8"
                android:backgroundTint="@color/light_grey_1"
                />

            <TextView
                android:id="@+id/TVAlternativeNameManga_PH"
                style="@style/Text.Callout_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/TVNameManga_PH"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:text="Botchi za Rokku!za Rokku!"
                android:textColor="@color/light_grey_1"
                android:background="@drawable/rectangle_rounded_all_8"
                android:backgroundTint="@color/light_grey_1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/GuidelineCenter_PH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                />

            <ImageView
                android:id="@+id/ImageBtnShare_PH"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_share_manga_page_off"
                app:layout_constraintTop_toBottomOf="@+id/TVAlternativeNameManga_PH"
                app:layout_constraintEnd_toEndOf="@id/GuidelineCenter_PH"
                />

            <ImageView
                android:id="@+id/ImageBtnBookmark_PH"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_add__manga_page_off"
                app:layout_constraintTop_toBottomOf="@+id/TVAlternativeNameManga_PH"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@id/ImageBtnShare_PH"
                />

            <ImageView
                android:id="@+id/ImageBtnDownload_PH"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_donwload_manga_page_off"
                app:layout_constraintTop_toBottomOf="@+id/TVAlternativeNameManga_PH"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@id/ImageBtnBookmark_PH"
                />

            <TextView
                android:id="@+id/TVBtnRead_PH"
                style="@style/Text.Headline_6.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/TVAlternativeNameManga_PH"
                app:layout_constraintStart_toStartOf="@id/GuidelineCenter_PH"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="14dp"
                android:gravity="center"
                android:text="Читать"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_rounded_all_28"
                android:backgroundTint="@color/black"
                android:textColor="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CCBlock_PH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/TVBtnRead_PH"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_rounded_top_21"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/FlexTagsBlock_PH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/TagOne_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/TagImageOne_PH"
                        android:text="Botc  hi"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />
                    <ImageView
                        android:id="@+id/TagImageOne_PH"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="@+id/TagOne_PH"
                        app:layout_constraintBottom_toBottomOf="@+id/TagOne_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagOne_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagTwo_PH"
                        android:src="@drawable/circle"
                        app:tint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagTwo_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/TagImageOne_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagImageTwo_PH"
                        android:text="Botchtchichi"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />
                    <ImageView
                        android:id="@+id/TagImageTwo_PH"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="@+id/TagOne_PH"
                        app:layout_constraintBottom_toBottomOf="@+id/TagOne_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagTwo_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagThree_PH"
                        android:src="@drawable/circle"
                        app:tint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagThree_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/TagImageTwo_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagImageThree_PH"
                        android:text="Botchihi"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />

                    <ImageView
                        android:id="@+id/TagImageThree_PH"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="@+id/TagOne_PH"
                        app:layout_constraintBottom_toBottomOf="@+id/TagOne_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagThree_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagFour_PH"
                        android:src="@drawable/circle"
                        app:tint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagFour_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/TagImageThree_PH"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Botchichhi"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagFive_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/TagFour_PH"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/TagImageFive_PH"
                        android:text="Botc  hi"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="40dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />
                    <ImageView
                        android:id="@+id/TagImageFive_PH"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="@+id/TagFive_PH"
                        app:layout_constraintBottom_toBottomOf="@+id/TagFive_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagFive_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagSix_PH"
                        android:src="@drawable/circle"
                        app:tint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagSix_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/TagFour_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagImageFive_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagImageSix_PH"
                        android:text="Botchtchichi"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />
                    <ImageView
                        android:id="@+id/TagImageSix_PH"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="@+id/TagFive_PH"
                        app:layout_constraintBottom_toBottomOf="@+id/TagFive_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagSix_PH"
                        app:layout_constraintEnd_toStartOf="@+id/TagSeven_PH"
                        android:src="@drawable/circle"
                        app:tint="@color/light_grey_1" />

                    <TextView
                        android:id="@+id/TagSeven_PH"
                        style="@style/Text.Callout_Light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/TagFour_PH"
                        app:layout_constraintStart_toEndOf="@+id/TagImageSix_PH"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Botchihi"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="@color/light_grey_1"
                        android:background="@drawable/rectangle_rounded_all_8"
                        android:backgroundTint="@color/light_grey_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/ViewTabBackGround_PH"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/LLContainerTabs_PH"
                    app:layout_constraintBottom_toBottomOf="@id/LLContainerTabs_PH"
                    android:background="@drawable/rectangle_rounded_all_16"
                    android:backgroundTint="@color/grey_50"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/LLContainerTabs_PH"
                    app:layout_constraintBottom_toBottomOf="@id/LLContainerTabs_PH"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:id="@+id/ViewTab_PH"
                        android:layout_width="110dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/rectangle_rounded_all_12"
                        android:backgroundTint="@color/white"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/LLContainerTabs_PH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FlexTagsBlock_PH"
                    >

                    <TextView
                        style="@style/Text.Subheadline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="Общее"
                        android:textColor="@color/grey_900" />

                    <TextView
                        style="@style/Text.Subheadline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Информация"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/grey_500" />

                    <TextView
                        style="@style/Text.Subheadline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Статистика"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/grey_500" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/LLContainerTabs_PH"
                    android:background="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/CCDescription_PH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/rectangle_rounded_all_16"
                        android:backgroundTint="@color/grey_50"
                        >

                        <TextView
                            android:id="@+id/TVDescriptionTitle_PH"
                            style="@style/Text.Headline_6.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="Описание"
                            android:textColor="@color/grey_900" />

                        <TextView
                            android:id="@+id/TVDescriptionDetail_PH"
                            style="@style/Text.Callout_Light"
                            android:layout_width="0dp"
                            android:layout_height="21dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/TVDescriptionTitle_PH"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="16dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="Старшеклассницанительна,"
                            android:textColor="@color/grey_100"
                            android:background="@drawable/rectangle_rounded_all_8"
                            android:backgroundTint="@color/grey_100"
                            />

                        <TextView
                            android:id="@+id/TVDescriptionDetailTwo_PH"
                            style="@style/Text.Callout_Light"
                            android:layout_width="0dp"
                            android:layout_height="21dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/TVDescriptionDetail_PH"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="4dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="Старшеклассницанительна,"
                            android:textColor="@color/grey_100"
                            android:background="@drawable/rectangle_rounded_all_8"
                            android:backgroundTint="@color/grey_100"
                            />
                        <TextView
                            android:id="@+id/TVDescriptionDetailThree_PH"
                            style="@style/Text.Callout_Light"
                            android:layout_width="0dp"
                            android:layout_height="21dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/TVDescriptionDetailTwo_PH"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="4dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="Старшеклассницанительна,"
                            android:textColor="@color/grey_100"
                            android:background="@drawable/rectangle_rounded_all_8"
                            android:backgroundTint="@color/grey_100"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/TVChapterTitle_PH"
                        style="@style/Text.Headline_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/CCDescription_PH"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Главы"
                        android:textColor="@color/grey_900" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/CCChaptersManga_PH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TVChapterTitle_PH">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/CCChaptersBLock_PH"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/LLChapterCount_PH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <TextView
                                    android:id="@+id/TVCountChapterStart_PH"
                                    style="@style/Text.Headline_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Всего глав: "
                                    android:textColor="@color/grey_light_alternative_4" />

                                <TextView
                                    android:id="@+id/TVCountChapter_PH"
                                    style="@style/Text.Headline_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textColor="@color/grey_light_alternative_4" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLSortBtn_PH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/rectangle_rounded_all_9"
                                android:backgroundTint="@color/grey_light_alternative_1"
                                app:layout_constraintTop_toTopOf="@id/LLChapterCount_PH"
                                app:layout_constraintBottom_toBottomOf="@id/LLChapterCount_PH"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="14dp"
                                android:paddingTop="6dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="6dp">

                                <TextView
                                    style="@style/Text.Callout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="16dp"
                                    android:text="Сорт."
