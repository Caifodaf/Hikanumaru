<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_general_block"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_error_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            tools:visibility="gone">
            <include
                layout="@layout/layout_error" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_settings_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/ic_unicorn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_in_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_settings_secret"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/font_bold"
            android:text="@string/in_working"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_in_work"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_btn_profile_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                style="@style/Text.Headline_4"
                android:background="@drawable/rectangle_rounded_all"
                android:backgroundTint="@color/grey_light_alternative_2"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Профиль" />

            <TextView
                android:id="@+id/tv_btn_support_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                style="@style/Text.Headline_4"
                android:background="@drawable/rectangle_rounded_all"
                android:backgroundTint="@color/grey_light_alternative_2"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Поддержка" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/ll_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_btn_media_storage_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                style="@style/Text.Headline_4"
                android:background="@drawable/rectangle_rounded_all"
                android:backgroundTint="@color/grey_light_alternative_2"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Медиотека" />

            <TextView
                android:id="@+id/tv_btn_test_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                style="@style/Text.Headline_4"
                android:background="@drawable/rectangle_rounded_all"
                android:backgroundTint="@color/grey_light_alternative_2"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Test" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version App: 0.7.3\n(Closed beta)"
            android:textColor="@color/grey_text"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/font_bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>