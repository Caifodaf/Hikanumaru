<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp"
    android:clipToPadding="false"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_manga_main_ph_item"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/v_home_ph_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_rounded_all"
            android:backgroundTint="@color/grey_light_alternative_1" />

        <TextView
            android:id="@+id/tv_manga_state_main_ph_item"
            style="@style/Text.Caption_2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/rectangle_rounded_all_5"
            android:backgroundTint="@color/grey_light_alternative_2"
            android:elevation="50dp"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="11111111"
            android:textColor="@color/grey_light_alternative_2"
            app:layout_constraintBottom_toBottomOf="@id/v_home_ph_item"
            app:layout_constraintStart_toStartOf="@id/v_home_ph_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_home1_ph_item"
        android:layout_width="98dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/rl_manga_main_ph_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_rounded_all"
        android:backgroundTint="@color/grey_light_alternative_1" />

    <TextView
        android:id="@+id/tv_home2_ph_item"
        android:layout_width="66dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home1_ph_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/rectangle_rounded_all"
        android:backgroundTint="@color/grey_light_alternative_1" />

    <TextView
        android:id="@+id/tv_home3_ph_item"
        android:layout_width="46dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home2_ph_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rectangle_rounded_all"
        android:backgroundTint="@color/grey_light_alternative_1" />
</androidx.constraintlayout.widget.ConstraintLayout>