<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc_main_block_chapter_reader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_rounded_all_15"
        android:backgroundTint="@color/grey_light_alternative_7"
        >

        <ImageView
            android:id="@+id/iv_btn_check_read_chapter_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_chapter_number_manga_page_item"
            app:layout_constraintBottom_toBottomOf="@+id/tv_chapter_number_manga_page_item"
            android:src="@drawable/ic_circle"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_chapter_number_manga_page_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_btn_check_read_chapter_item"
            app:layout_constraintEnd_toStartOf="@+id/tv_date_publisher_chapter_manga_page_item"
            android:maxLines="1"
            android:text="Том 1 — Глава 1"
            style="@style/Text.Callout"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_chapter_description_manga_page_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_chapter_number_manga_page_item"
            app:layout_constraintStart_toEndOf="@+id/iv_btn_check_read_chapter_item"
            app:layout_constraintEnd_toStartOf="@+id/tv_date_publisher_chapter_manga_page_item"
            android:maxLines="1"
            android:text="Тамаки"
            style="@style/Text.FootNote"
            android:textColor="@color/grey_light_alternative_5"
            />

        <TextView
            android:id="@+id/tv_date_publisher_chapter_manga_page_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="14.03.2021"
            style="@style/Text.FootNote"
            android:textColor="@color/grey_light_alternative_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>