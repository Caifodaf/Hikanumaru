<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            android:paddingBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="100dp">

                     <include layout="@layout/layout_error"/>

                    <RelativeLayout
                        android:id="@+id/placeholder_home_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:visibility="gone">

                        <include layout="@layout/fragment_home_placeholder" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_error_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:fontFamily="@font/font_semi_bold"
                        android:text="@string/error_load"
                        android:textColor="@color/black_news_text"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="58dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_title_home_top_one"
                            style="@style/Text.Headline_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="@string/title_home_top_one"
                            android:textColor="@color/grey_light_alternative_6" />

                        <TextView
                            android:id="@+id/tv_title_home_top_two"
                            style="@style/Text.Headline_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_home_top_one"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="-10dp"
                            android:text="@string/title_home_top_two"
                            android:textColor="@color/grey_light_alternative_4" />

                        <ImageView
                            android:id="@+id/iv_search_home"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="16dp"
                            app:srcCompat="@drawable/ic_search"
                            app:tint="@color/grey_500" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_recommendation_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_rec_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:fontFamily="@font/font_bold"
                                android:letterSpacing="-0.02"
                                android:text="@string/recomendations"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_see_more_rec_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_rec_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:fontFamily="@font/font_medium"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_recommendation_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_rec_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_history_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_history_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/history"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_history_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_history_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_history_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_history_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/manga_main_item">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_new_list_upper"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/rv_history_list"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:visibility="gone"
                                android:orientation="horizontal">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_genres_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_genres_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/genres"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_genres_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_genres_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_genres_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_genres_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/genres_main_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_genres_list2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/rv_genres_list"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/genres_main_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_special_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_special_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/special_for_you"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_special_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_special_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_special_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_special_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/manga_main_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_journal_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_journal_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/magazines"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_journal_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_journal_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_journal_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_journal_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/journals_main_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_new_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_new_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/new_main_page"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_new_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_new_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_new_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_new_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/manga_main_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_popular_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_popular_home"
                                style="@style/Text.Headline_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="16dp"
                                android:clickable="false"
                                android:text="@string/popular"
                                android:textColor="@color/grey_light_alternative_6" />

                            <TextView
                                android:id="@+id/tv_see_more_popular_home"
                                style="@style/Text.Callout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/tv_popular_home"
                                android:layout_marginEnd="16dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:text="@string/see_more"
                                android:textColor="@color/blue" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_popular_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_popular_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="60dp"
                                android:orientation="vertical"
                                tools:listitem="@layout/large_popular_main_manga_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>