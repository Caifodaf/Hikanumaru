        <item name="android:textColorHint">#8D8D8D</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#8D8D8D</item>
        <item name="colorControlNormal">#8D8D8D</item>
        <item name="colorControlActivated">#8D8D8D</item>
        <item name="colorPrimary">#8D8D8D</item> // Activated State
        <item name="colorOnSurface">#8D8D8D</item> // Normal State
    </style>



